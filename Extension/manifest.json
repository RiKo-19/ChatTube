{
  "manifest_version": 3,
  "name": "ChatTube",
  "version": "1.0",
  "description": "Ask questions about the YouTube video you're currently watching....",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
